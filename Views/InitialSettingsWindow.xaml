<Window x:Class="MinesweeperXStatsViewer.Views.InitialSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Initial Settings" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Months names in your stats file" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
        <UniformGrid Columns="3" Rows="4" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <TextBlock Text="January"/>
                <TextBox x:Name="JanuaryBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="February"/>
                <TextBox x:Name="FebruaryBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="March"/>
                <TextBox x:Name="MarchBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="April"/>
                <TextBox x:Name="AprilBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="May"/>
                <TextBox x:Name="MayBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="June"/>
                <TextBox x:Name="JuneBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="July"/>
                <TextBox x:Name="JulyBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="August"/>
                <TextBox x:Name="AugustBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="September"/>
                <TextBox x:Name="SeptemberBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="October"/>
                <TextBox x:Name="OctoberBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="November"/>
                <TextBox x:Name="NovemberBox"/>
            </StackPanel>

            <StackPanel Margin="5">
                <TextBlock Text="December"/>
                <TextBox x:Name="DecemberBox"/>
            </StackPanel>
        </UniformGrid>
        <Button Content="Save Settings" Width="120" HorizontalAlignment="Center" Click="Save_Click"/>
    </StackPanel>
</Window>
